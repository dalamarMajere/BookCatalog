@model IEnumerable<Category>

<form method="post" asp-action="Filter" runat="server">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create a Book</h2>
			<hr />
		</div>
		@foreach (var item in Model)
		{
			<div>
				<input type="checkbox" name="category" class="form-check-input" value="@item.Name">@item.Name
			</div>
		}
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

