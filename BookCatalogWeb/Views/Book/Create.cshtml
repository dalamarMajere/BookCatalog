@model BookWithCategories

<form method="post" asp-action="Create">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create a Book</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Book.Name"></label>
			<input asp-for="Book.Name" class="form-control" />
			<span asp-validation-for="Book.Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Book.DisplayOrder"></label>
			<input asp-for="Book.DisplayOrder" class="form-control" />
			<span asp-validation-for="Book.DisplayOrder" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Categories"></label>
			@Html.DropDownListFor(model => model.Book.Category, new SelectList(Model.Categories), "Select category", new { @class = "form-control", } )
			<span asp-validation-for="Book.Category" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
		<a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>

