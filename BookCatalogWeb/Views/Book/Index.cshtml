@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<partial name="_NotificationPartial" />

<div class="container p-4">
    <div class="row pt-4">
        <div class="col-5">
            <h2 class="text-primary">Book.ly</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 
            </a>
            <a asp-controller="Book" asp-action="Filter" class="btn btn-secondary">
                <i class="bi bi-funnel"></i>  
            </a>
            
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100">
    <thead>
        <tr>
            <th>
                Display Order
            </th>
            <th>
                Book Name
            </th>
            <th>
                Category
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td width="5%">
                    <center>@book.DisplayOrder</center>
                </td>
                <td width="40%">
                    <center>@book.Name</center>
                </td>    
                <td width="35%">
                    <center>@book.Category</center>
                </td>
                <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i> Edit
                            </a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
